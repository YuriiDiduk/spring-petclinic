pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
      }
  stages{
    stage('DockerLint') {
      steps {       
        sh 'docker run --rm -i hadolint/hadolint < Dockerfile' 
      }
    }
    stage('Build') {
      steps {
                       
                echo "The build number is ${env.BUILD_NUMBER}"
                echo "You can also use \${BUILD_NUMBER} -> ${BUILD_NUMBER}" 
                sh 'printenv'
                  }
            }
            
   
       }
      }
